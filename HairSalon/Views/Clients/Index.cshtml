@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

<h1>Clients:</h1>

@if (@Model.Count == 0)
{
  <h3>There are currently no clients.</h3>
} 

@foreach (Client client in Model)
{
  <li>
    <h2>@Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId }) </h2>| Stylist: @client.Stylist.Name
  </li>
}
<br>
<br>

<p>@Html.ActionLink("Add new client", "Create")</p>