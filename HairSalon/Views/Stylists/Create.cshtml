@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<h2>Add a new stylist:</h2>
<hr/>
@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Name, new {required = "required"})
    @Html.TextBoxFor(model => model.Name)

    @Html.LabelFor(model => model.Number, new {required = "required"})
    @Html.TextBoxFor(model => model.Number)

    @Html.LabelFor(model => model.Availability)
    @Html.TextBoxFor(model => model.Availability)
    
    <input type="submit" value="Add Stylist" class="btn btn-info" />
}
<br>
<p>@Html.ActionLink("Back to stylists", "Index" )</p>


